                      input#input2(type='radio', name='price', value='30-60')
                      label(for='input2') 30-60 tkr
                      input#input3(type='radio', name='price', value='60-90')
                      label(for='input3') 60-90 tkr
                      input#input4(type='radio', name='price', value='90-120')
                      label(for='input4') 90-120 tkr
