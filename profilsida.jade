                          | Slutperiod
                          input#top-placement-end.datepicker
                    hr
                  .small-12.columns
                    label Synlighetsinställningar
                      br
                      input#show(type='radio', name='value', value='show')
                      label(for='show') Synlig
                      input#hidden(type='radio', name='value', value='hidden')
                      label(for='hidden') Släckt

          a.button(href='#') Spara

