include includes/head
body
  include includes/nav

  .row
    include includes/sidenav

    .large-9.columns.medium-8.columns
      h3 Lägg till ny inspirationsbild
      .row.administration-content
        .large-12.medium-12.columns
          dl.accordion(data-accordion='data-accordion')
            dd
              a(href='#content1') Skapa inspirationsbild
              #content1.content.active
                .row
                  .small-12.columns
                    ul.small-block-grid-1.medium-block-grid-1.large-block-grid-2
                      li
                        .panel
                          img(src='http://placehold.it/400x250')
                          a.button.expand Ladda upp ny bild
                          label
                            | Placering
                            select
                              option(value='event') Event
                              option(value='konferens') Konferens
                              option(value='biljett') Biljett
                              option(value='backstage') Backstage
                              option(value='annonsera') Annonsera
                              option(value='om-eventmarket') Om Eventmarket
                              option(value='alla statiska sidor') lista över statiska sidor ska hämtas in
                          label
                            | Ordning (siffra)
                            input(type='text')
                          label
                            | Rubrik
                            input(type='text')
                          label
                            | Text
                            textarea
                          label
                            | URL
                            input(type='text')
                          label
                            | Status
                            select
                              option(value='visa') Visa
                              option(value='visaej') Visa ej
                          .row
                            .small-6.columns
                              a.button.expand(href='#') Spara
                            .small-6.columns
                              a.button.expand.alert(href='#') Radera
                      li
                        .panel
                          a.button.expand(href='#') Lägg till ny inspirationsbild
  include includes/footer